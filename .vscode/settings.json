{
    "python.analysis.typeCheckingMode": "basic",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.rulers": [
            119
        ],
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "black-formatter.args": [
        "--line-length",
        "119",
        "--target-version",
        "py311"
    ],
    "flake8.args": [
        "--max-line-length=120",
    ],
    "isort.args": [
        "--profile",
        "black"
    ]
}
